<UserControl
    x:Class="Skua.WPF.Views.PacketInterceptorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Skua.WPF.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    xmlns:wpf="clr-namespace:Skua.WPF"
    d:DataContext="{d:DesignInstance vms:PacketInterceptorViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Height="auto"
            Margin="6,6,6,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <ComboBox
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Server"
                ItemsSource="{Binding ServerList}"
                SelectedItem="{Binding SelectedServer}"
                Style="{StaticResource MaterialDesignFilledComboBox}" />
            <Button
                x:Name="Test"
                Grid.Column="1"
                Width="110"
                Height="auto"
                Margin="6,0,0,0"
                Command="{Binding ConnectInterceptorCommand}"
                DockPanel.Dock="Right">
                <Button.Style>
                    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                        <Setter Property="Content" Value="Connect" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Running, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="Content" Value="Disconnect" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <TextBox
            x:Name="SearchBox"
            Grid.Row="1"
            Margin="6,0,6,3"
            materialDesign:HintAssist.Hint="Search packets..."
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            TextChanged="TextBox_TextChanged" />
        <Grid Grid.Row="2" Margin="6,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <CheckBox
                Margin="3,0"
                Content="Log Packets"
                IsChecked="{Binding IsLogging}"
                Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" />
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    Height="30"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="2,2,1,2"
                    CornerRadius="4 0 0 4">
                    <Border.Background>
                        <SolidColorBrush Opacity="0.2" Color="Yellow" />
                    </Border.Background>
                    <TextBlock
                        Width="70"
                        Margin="3,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Outbound"
                        TextAlignment="Center" />
                </Border>
                <Border
                    Height="30"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="1,2,1,2"
                    CornerRadius="0">
                    <Border.Background>
                        <SolidColorBrush Opacity="0.2" Color="Blue" />
                    </Border.Background>
                    <TextBlock
                        Width="70"
                        Margin="3,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Inbound"
                        TextAlignment="Center" />
                </Border>
                <Border
                    Height="30"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="1,2,2,2"
                    CornerRadius="0 4 4 0">
                    <Border.Background>
                        <SolidColorBrush Opacity="0.2" Color="Red" />
                    </Border.Background>
                    <TextBlock
                        Width="70"
                        Margin="3,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Blocked"
                        TextAlignment="Center" />
                </Border>
            </StackPanel>
            <Button
                Grid.Column="2"
                Command="{Binding ClearPacketsCommand}"
                Content="Clear"
                Style="{StaticResource MaterialDesignPaperButton}" />
        </Grid>
        <ListBox
            Grid.Row="3"
            Margin="6,3,6,6"
            ItemsSource="{Binding Packets, UpdateSourceTrigger=PropertyChanged}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            SelectionMode="Multiple">
            <b:Interaction.Behaviors>
                <wpf:ListBoxCopySelectedBehavior />
                <wpf:ListBoxScrollToCaretBehavior />
                <wpf:ListBoxUnselectAllMenuBehavior />
            </b:Interaction.Behaviors>
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Outbound}" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Opacity="0.2" Color="Yellow" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Outbound}" Value="False">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Opacity="0.2" Color="Blue" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Outbound}" Value="{x:Null}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Opacity="0.2" Color="Red" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>