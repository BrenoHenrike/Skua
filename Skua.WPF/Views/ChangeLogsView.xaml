<UserControl
    x:Class="Skua.WPF.Views.ChangeLogsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Skua.WPF.Views"
    xmlns:usercontrols="clr-namespace:Skua.WPF.UserControls"
    xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    xmlns:wpf="clr-namespace:Skua.WPF"
    d:DataContext="{d:DesignInstance vms:ChangeLogsViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="460"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <!-- Refresh Button -->
        <Button Grid.Row="0" 
                Margin="6" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Width="80"
                Command="{Binding RefreshChangelog}"
                Content="Refresh"
                ToolTip="Refresh changelog from GitHub" />
        <mdxam:MarkdownScrollViewer
            x:Name="Markdownview"
            Grid.Row="1"
            Foreground="White"
            FontFamily="Cambria"
            Margin="20,10,0,20"
            Markdown="{Binding MarkdownDoc, UpdateSourceTrigger=PropertyChanged}"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="6,0"
                FontSize="16"
                Text="Donations can be made via PayPal you can click the buttons below."
                TextWrapping="Wrap" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="6"
                Command="{Binding OpenDelfinaDonationLink}"
                Content="Delfina PayPal" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,6,6,6"
                Command="{Binding OpenBrenoHenrikeDonationLink}"
                Content="BrenoHenrike PayPal" />
        </Grid>
    </Grid>
</UserControl>
