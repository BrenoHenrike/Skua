<UserControl
    x:Class="Skua.WPF.Views.ApplicationThemesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Skua.WPF.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="clr-namespace:Skua.WPF.UserControls"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    d:DataContext="{d:DesignInstance vms:ApplicationThemesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!--<Expander
                Margin="6,6,6,3"
                Header="Color Tool"
                IsExpanded="False">-->
            <usercontrols:ColorSchemeEditorUserControl DataContext="{Binding ColorSchemeEditor}" />
            <!--</Expander>-->
            <Expander Margin="6,3,6,6" Header="Defined Themes">
                <StackPanel>
                    <ItemsControl Margin="3,0" ItemsSource="{Binding ThemeService.Presets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <usercontrols:ThemeItemUserControl
                                    Margin="3"
                                    CanRemove="False"
                                    DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <ItemsControl Margin="3,0" ItemsSource="{Binding ThemeService.UserThemes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <usercontrols:ThemeItemUserControl
                                    Margin="3"
                                    CanRemove="True"
                                    DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Expander>
            <Expander Margin="6,3,6,6" Header="Backgrounds">
                <Grid DataContext="{Binding BackgroundTheme}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Background Selection -->
                    <ComboBox Grid.Row="0" Grid.Column="0"
                              Margin="3"
                              ItemsSource="{Binding AvailableBackgrounds}"
                              SelectedItem="{Binding SelectedBackground}"
                              materialDesign:HintAssist.Hint="Select Background" />

                    <Button Grid.Row="0" Grid.Column="1"
                            Margin="3"
                            Command="{Binding BrowseBackgroundCommand}"
                            Content="Browse"
                            ToolTip="Browse for local SWF file" />

                    <Button Grid.Row="0" Grid.Column="2"
                            Margin="3"
                            Command="{Binding RefreshBackgroundsCommand}"
                            Content="Refresh"
                            ToolTip="Refresh background list" />

                    <!-- Quick Actions -->
                    <Button Grid.Row="1" Grid.Column="0"
                            Margin="3"
                            Command="{Binding OpenThemesFolderCommand}"
                            Content="Open Themes Folder"
                            ToolTip="Open the themes folder in Explorer" />

                    <Button Grid.Row="1" Grid.Column="1"
                            Margin="3,3,3,3"
                            Command="{Binding GetBackgroundsCommand}"
                            Content="Get Backgrounds"
                            ToolTip="Open GitHub repository with more backgrounds" Grid.ColumnSpan="2" />
                </Grid>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>