<UserControl
    x:Class="Skua.WPF.UserControls.AssignHotKeyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Skua.WPF.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    d:DataContext="{d:DesignInstance vms:AssignHotKeyDialogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="6">
        <Button Click="AssignKey" Content="{Binding KeyInput, UpdateSourceTrigger=PropertyChanged}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Content="Ctrl"
                IsChecked="{Binding CtrlCheck}"
                Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" />
            <CheckBox
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Content="Alt"
                IsChecked="{Binding AltCheck}"
                Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" />
            <CheckBox
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                Content="Shift"
                IsChecked="{Binding ShiftCheck}"
                Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="0,0,3,0"
                Click="Button_Click"
                Content="Save" />
            <Button
                Grid.Column="1"
                Margin="3,0,0,0"
                Content="Cancel"
                IsCancel="True" />
        </Grid>
    </StackPanel>
</UserControl>